@model Web.Models.LoginModel

@{
    ViewData["Title"] = "LogOn";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "col-5 mt-3" }))
{
    @Html.ValidationSummary(true, "", htmlAttributes: new { @class = "alert alert-danger alert-dismissible" })

    <div class="form-group">
        <fieldset>
            <legend>Login Page</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <p>
                <button type="submit" class="btn btn-primary">Login</button>
            </p>
        </fieldset>
    </div>
}
<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    p {
        margin-top: 10px;
    }
</style>

